<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_mumu</item>
        <item name="colorPrimaryDark">@color/toolbar</item> <!--untuk merubah warna top of action bar-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>

        <!--Bottom line Edittext Color-->
        <item name="colorControlNormal">@color/md_black_1000</item>
        <item name="colorControlActivated">@color/toolbar</item>
        <item name="colorControlHighlight">@color/toolbar</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:progressDrawable">@drawable/indeterminate_circle_progress_green</item>
        <item name="android:progressBarStyle">@drawable/indeterminate_circle_progress_green</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="DialogStyle">
        <item name = "android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogStyle2">
        <item name = "android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TransactionListDialog">
        <item name="android:windowBackground">@color/bg_dialog</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="StrukTheme" parent="AppTheme.NoActionBar">
        <item name="android:textViewStyle">@style/StrukThemeFont</item>
    </style>
    <style name="StrukThemeFont" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="TextViewBold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Montserrat-Bold.otf</item>
    </style>
    <style name="TextViewLight" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

</resources>
