<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_mumu</item>
        <item name="colorPrimaryDark">@color/toolbar</item> <!--untuk merubah warna top of action bar-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>

        <!--Bottom line Edittext Color-->
        <item name="colorControlNormal">@color/md_black_1000</item>
        <item name="colorControlActivated">@color/toolbar</item>
        <item name="colorControlHighlight">@color/toolbar</item>
        <item name="android:windowSoftInputMode">stateHidden</item>

        <item name="android:statusBarColor">@color/toolbar</item>
    </style>
    <style name="MyCheckbox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_primary_mumu</item>
        <item name="android:textColorSecondary">@color/md_grey_200</item>
    </style>

</resources>