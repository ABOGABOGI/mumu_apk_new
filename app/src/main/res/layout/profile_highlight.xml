<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:shimmer_auto_start="false"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingRight="6.5dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52.8dp"
                android:layout_height="52.8dp"
                android:layout_marginBottom="15.5dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="8.5dp"
                android:layout_weight="0"
                android:background="@color/arrow_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    tools:ignore="MissingPrefix"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:background="@color/arrow_color"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5dp">

                    <LinearLayout
                        android:background="@color/arrow_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:visibility="invisible"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/ic_dompet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="Rp. 0,-"
                            android:textSize="11sp"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="4.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="65dp"
                        android:layout_height="37dp"
                        android:layout_weight="0"
                        android:backgroundTint="@color/arrow_color"
                        android:fontFamily="@font/roboto"
                        android:textAllCaps="false"
                        android:textColor="@color/baroka_white"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>


    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/walletContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView6"
            android:layout_width="52.8dp"
            android:layout_height="52.8dp"
            android:layout_marginBottom="15.5dp"
            android:layout_marginRight="@dimen/_8dp"
            android:layout_marginTop="8.5dp"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="Koneksi Gagal"
                tools:ignore="MissingPrefix"
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_5dp">

                <LinearLayout
                    android:id="@+id/dompetContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:srcCompat="@drawable/ic_dompet" />

                    <TextView
                        android:id="@+id/tvDepositBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Rp. 0,-"
                        android:textSize="11sp"
                        android:clickable="true"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>

                <Space
                    android:layout_width="4.5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnReloadSaldo"
                    android:layout_width="65dp"
                    android:layout_height="37dp"
                    android:layout_weight="0"
                    android:backgroundTint="@color/color_primary_mumu"
                    android:fontFamily="@font/roboto"
                    android:textAllCaps="false"
                    android:text="Top Up"
                    android:textColor="@color/baroka_white"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>