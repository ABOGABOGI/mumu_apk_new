<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idLayBelanja"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="39dp"
    android:background="@color/list_belanja_dark"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnDeleteItem"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            app:srcCompat="@drawable/ic_close"
            android:tint="@color/md_blue_grey_200" />

    </LinearLayout>

    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <TextView
            android:layout_marginTop="@dimen/_2dp"
            android:layout_marginBottom="@dimen/_2dp"
            android:id="@+id/tvNamaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:text="Produk" />
    </FrameLayout>

    <View
        android:id="@+id/lineSeparatorKiri"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/md_white_1000" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnDecr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.33"
            android:gravity="center"
            android:padding="7dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_min"
            android:textAlignment="center" />

        <EditText
            android:text="1"
            android:id="@+id/edInputJumlah"
            android:layout_width="0dp"
            android:paddingTop="@dimen/_3dp"
            android:paddingBottom="@dimen/_3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/white_bg_radius"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:inputType="number" />

        <ImageView
            android:id="@+id/btnIncr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.33"
            android:gravity="center"
            android:padding="7dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_plus"
            android:textAlignment="center" />
    </LinearLayout>


    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:id="@+id/lineSeparatorKanan"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/md_white_1000" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etHargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="3.000"
            />


    </LinearLayout>
</LinearLayout>