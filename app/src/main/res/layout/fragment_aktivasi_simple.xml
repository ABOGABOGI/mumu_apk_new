<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_margin="16dp"
android:elevation="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <ScrollView
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"

                android:text="@string/welcome_activation"
                android:textSize="26dp"
                android:textColor="@color/color_primary_mumu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:textColor="@color/arrow_color"
                android:layout_marginBottom="25dp"
                android:text="@string/welcome_activation_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"></LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nomor_ktp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nomor_ktp_field"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nomor_ktp" />

            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:layout_width="283dp"
                android:layout_height="184dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ektpanimasinew"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>


    </ScrollView>
</androidx.cardview.widget.CardView>