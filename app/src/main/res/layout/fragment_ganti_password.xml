<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.profil.gantiPassword">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/color_primary_mumu"
        android:paddingBottom="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backBtn_rs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/vector_drawable_icon_back"
        android:tint="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="@id/imageView2"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="@id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganti Passowrd"
        android:textSize="20sp"
        android:textColor="@color/md_white_1000"
        app:layout_constraintTop_toTopOf="@id/backBtn_rs"
        app:layout_constraintBottom_toBottomOf="@id/backBtn_rs"
        app:layout_constraintStart_toEndOf="@id/backBtn_rs"
        android:layout_marginStart="@dimen/_10sp"/>

    <TextView
        android:id="@+id/tvPasswordLama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password lama"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        />
    <EditText
        android:id="@+id/oldPassword"
        android:background="@drawable/edit_txt_round_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="@dimen/_8dp"
        android:paddingBottom="@dimen/_8dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordLama"/>
    <TextView
        android:id="@+id/tvPasswordBaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:text="Password Baru"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/oldPassword"
        />
    <EditText
        android:id="@+id/newPassword"
        android:background="@drawable/edit_txt_round_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="@dimen/_8dp"
        android:paddingBottom="@dimen/_8dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordBaru"/>
    <TextView
        android:id="@+id/tvUlPasswordBaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:text="Ulangi Password Baru"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/newPassword"/>
    <EditText
        android:id="@+id/verNewPassword"
        android:background="@drawable/edit_txt_round_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="@dimen/_8dp"
        android:paddingBottom="@dimen/_8dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUlPasswordBaru"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintTop_toBottomOf="@id/verNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Submit"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/btn_style_primary_mumu"/>
        
</androidx.constraintlayout.widget.ConstraintLayout>