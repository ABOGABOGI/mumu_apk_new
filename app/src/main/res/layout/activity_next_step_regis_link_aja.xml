<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NextStepRegisLinkAja">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_mumu">

        <ImageView
            android:id="@+id/backBtn_univ"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_back_button"
            android:tint="@color/md_white_1000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahkan Link Aja"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textColor="@color/color_primary_mumu"
                android:textSize="@dimen/_20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esty Rahayu"
                android:textSize="@dimen/_16dp" />

            <Space
                android:layout_width="11dp"
                android:layout_height="39dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo :" />

                <Space
                    android:layout_width="37dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/saldoUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 6.000" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="131dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/linkaja" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Masukkan Kode Verifikasi Anda"
                android:textColor="@color/color_primary_mumu"
                android:textSize="@dimen/_10dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/verifikasiSatu"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/verifikasiDua"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/verifikasiTiga"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/verifikasiEmpat"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/verifikasiLima"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/verifikasiEnam"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

    </ScrollView>

    <Button
        android:id="@+id/btnAktivasiDirectDebit"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_style_primary_mumu"
        android:fontFamily="@font/roboto_medium"
        android:text="Aktifkan Fitur Direct Debit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>