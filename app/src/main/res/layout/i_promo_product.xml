<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlPromoProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_1dp">


    <ImageView
        android:id="@+id/imvPromoProduct"
        android:padding="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_local_offer" />
    <TextView
        android:id="@+id/tvDisc"
        android:padding="@dimen/_2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="Disc 10%"
        android:textSize="@dimen/_10sp"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/bg_red_box"/>

    <TextView
        android:id="@+id/tvPrevPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tvCurrPrice"
        android:textColor="@color/md_black_1000"
        android:text="Rp 100.000"
        android:textSize="@dimen/_10sp"
        android:background="@drawable/strike_through"/>
    <TextView
        android:id="@+id/tvCurrPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sp"
        android:textColor="@color/reddish"
        android:text="Rp 60.000"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
